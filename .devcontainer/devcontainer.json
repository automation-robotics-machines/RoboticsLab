{
  "name": "ROS2 Desktop with GUI",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--env=DISPLAY=host.docker.internal:0",
    "--env=LIBGL_ALWAYS_SOFTWARE=1",   // Safe fallback
    "--shm-size=2gb"
  ],
  "containerEnv": {
    "DISPLAY": "host.docker.internal:0",
    "QT_X11_NO_MITSHM": "1",
    "XAUTHORITY": "/tmp/.Xauthority"
  },
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "twxs.cmake",
        "ms-vscode.cpptools"
      ]
    }
  }
}
